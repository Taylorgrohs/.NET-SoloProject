@using System.Security.Claims

@model SoloProject.Models.Comment
<div class="container createComment">
    <h1>Create new comment</h1>
    <br />
    <div class="container">
        @using (Html.BeginForm())
        {
            <input type="hidden" name="Name" id="Name" value=@User.GetUserName() >
            <input id="PostId" type="hidden" name="PostId" value=@ViewBag.PostId />


            <p>@Html.LabelFor(model => model.CommentBody)</p>
            <p>@Html.TextAreaFor(model => model.CommentBody)</p>

            <input type="submit" value="Create" class="btn btn-success" />
        }
    </div>
</div>