
@model IList<SoloProject.Models.Comment>

        <div class=" postTitle">
            <h1>@Html.DisplayFor(model => model[0].Post.Name)</h1>
            <h2> "@Html.DisplayFor(model => model[0].Post.Content)"</h2>
        </div>
        <hr />
        @foreach (var comment in Model)
        {
            <div class="container comment">
                <br />
                <h3>@comment.Name</h3>
                <p>-- @Html.DisplayFor(x => comment.CommentBody)</p>
                <br />
                <p>@Html.ActionLink("Edit", "Edit", new { id = comment.CommentId }) | @Html.ActionLink("Delete", "Delete", new { id = comment.CommentId })</p>
            </div>
        }

    <br />
    <div class="container footer">
        <p>@Html.ActionLink("New Comment", "Create", new { id = Model[0].PostId })</p>

        <p>@Html.ActionLink("Home", "Index", "Posts")</p>
    </div>
