<!DOCTYPE html>

<html>
<head>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" type="text/css" rel="stylesheet">
    <link href="~/lib/bootstrap/dist/css/bootstrap-theme.min.css" type="text/css" rel="stylesheet">
    <script src="~/lib/jquery/dist/jquery.min.js" type="text/javascript"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" type="text/javascript"></script>
    <link rel="stylesheet" type="text/css" href="~/css/styles.css" />
    <script src="~/lib/ajax/dist/ajax.min.js"></script>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

</head>
<body>
    @using System.Security.Claims
    <div class=" navbar">
        @if (User.IsSignedIn())
        {
            @using (Html.BeginForm("LogOff", "Account"))
            {
                <p>Welcome, @User.GetUserName()      
                 &nbsp;&nbsp;&nbsp;    <input type="submit" class="btn btn-default" value="Log out" /></p>
            }
        }
        else
        {
            <p>@Html.ActionLink("Register", "Register") | @Html.ActionLink("Log in", "Login")</p>
           
        }
    </div>
    <div class="left-side">&nbsp;</div>
    <div>
        @RenderBody()
    </div>
    <div class="right-side">&nbsp;</div>
</body>
</html>
