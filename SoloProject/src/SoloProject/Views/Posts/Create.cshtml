
@model SoloProject.Models.Post
<div class="container createPost">
    <h1>Create new Post</h1>
    <br />
    <div class="container">
        @using (Html.BeginForm())
        {
            <input id="PostId" type="hidden" name="PostId" value=@ViewBag.PostId />


            <p>@Html.LabelFor(model => model.Content)</p>
            <p>@Html.TextAreaFor(model => model.Content)</p>

            <input type="submit" value="Create" class="btn btn-success" />
        }
    </div>
</div>